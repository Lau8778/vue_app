$rem(n)
  16*n/1080 rem

#app
  font-family 'Microsoft YaHei'
.clearfix:after
  content ''
  display block
  clear both
.toTop
  position fixed
  right 2%
  bottom 3rem
  width 1.4rem
  height 1.4rem
  color #FFFFFF
  background-color rgba(0, 0, 0, .8)
  border-radius 50%
  overflow hidden
  &:after
    content ''
    display block
    width 1.4rem
    height 1.4rem
    background url("../img/arrowLeft.png") no-repeat center
    background-size 60%
#topbar
  position fixed
  z-index 100
  top 0
  width 100%
  .wrap-head
    position relative
    height $rem(126)
    background-color #89be48
    .header-icon
      width 100%
      height $rem(126)
      background url("../img/title.png") no-repeat center
      background-size 50%
    &>a
      .header-typeimg
        display block
        width $rem(126)
        height $rem(126)
        position absolute
        top 0
        right 0
        background url("../img/search.png") no-repeat center
        background-size 45%
  .wrap-menuNavNewProduct
    background-color #FFFFFF
    position relative
    .menuNavNewProductPanel
      width 100%
      height $rem(126)
      overflow hidden
      position relative
      .menuNavNewProduct
        height $rem(126)
        overflow hidden
        .selected
          border-bottom 2px solid #80b532
        & li
          width $rem(210)
          height $rem(121)
          text-align center
          float left
          &.selected>a
            color #80b532
          & a
            text-align center
            font-family 'Microsoft YaHei'
            font-size .6rem
            font-weight bold
            display block
            width $rem(210)
            height $rem(120)
            line-height $rem(120)
.lf-loadmore
  padding 4.1rem 0 2rem
  background-color rgb(242, 242, 242)
.life-goodsUl
  background-color #FFFFFF
.life-child-thank
  & li
    width 25%
    margin .5rem 0
    float left
    text-align center
    & a
      display block
      img
        width 80%
        margin auto
      dl
        height 1rem
        line-height 1rem
        font-size .55rem
.category-banner
  width 100%
  margin .7rem auto 0
  img
    width 100%
    display block
    vertical-align top
.subcat-title
  max-width 96%
  text-align center
  font-size .8em
  color #000
  line-height 2.3em
  margin 0 auto
.shelf-item
  position relative
  width 96%
  border 1px solid #ddd
  margin 0 auto
  font-size .8rem
  .item-pic-bx
    width 100%
    overflow hidden
    display block
    position relative
  .item-panel
    width 100%
    background #fff
    color #333
    padding-bottom .15rem
    overflow hidden
    line-height 1.3rem
    font-size .63rem
    font-weight 600
    .act-tag
      background-color #fff000
    .title
      width 94%
      overflow hidden
      margin 0 auto
      text-align left
      color #333
      text-overflow ellipsis
      white-space nowrap
      padding-top .23rem
    .item-price
      width 94%
      overflow hidden
      margin 0 auto
      .price-cont
        min-width 68%
        overflow hidden
        float left
        line-height .9rem
      .original-price
        color #ccc
        text-decoration line-through
      .promo-lable
        display inline-block
        background-color #c00
        color #FFFFFF
        padding .01rem .11rem
      .item-comment
        float right
        text-align right
        color #999
  .item-pic
    width 100%
    display block
    vertical-align top
    margin 0 auto
    position static
.item-status-empty
  width 3rem
  height 3rem
  background-color rgba(0,0,0,.6)
  border-radius 50%
  text-align center
  vertical-align middle
  color #fff
  line-height 3rem
  font-weight 700
  position absolute
  left 50%
  top 50%
  margin-top -1.6rem
  margin-left -1.6rem
#loadingAlert
  margin-top .4rem
  text-align center
  color #888
  padding-bottom 1rem
  font-size .5rem
#bottombar
  position fixed
  bottom 0
  z-index 100
  height 2.13rem
  width 100%
  background-color #f8f8f8
  border-top 1px solid #ddd
#footermenuNav
  text-align center
  overflow hidden
  li
    float left
    width 20%
    position relative
    margin 0 auto
    &>a
      display block
      text-align center
      font-size: .1rem;
      &>span
        font-size .5rem
      .homeico
        background-image url("../img/icon01.png")
      .typeico
        background-image url("../img/icon02.png")
      .strollico
        background-image url("../img/icon03.png")
      .shoppingcartico
        background-image url("../img/icon04.png")
      .accountcenterico
        background-image url("../img/icon05.png")
  .ico
    width 100%
    height 1.65rem
    background-position center
    background-repeat no-repeat
    background-size 28%
    margin-bottom -.2rem
.download-wrap
  position fixed
  bottom 2.14rem
  left 0
  right 0
  height 2.77rem
  background url("../img/downloadBottom.png") no-repeat 0 0
  background-size 100%
  img
    position absolute
    left 4.8%
    top -1.77rem
    width 15.5%
