$rem(n)
  16*n/1080 rem

.toTop
  position fixed
  right 2%
  bottom 3rem
  width 1.4rem
  height 1.4rem
  color #FFFFFF
  background-color rgba(0, 0, 0, .8)
  border-radius 50%
  overflow hidden
  &:after
    content ''
    display block
    width 1.4rem
    height 1.4rem
    background url("../img/arrowLeft.png") no-repeat center
    background-size 60%
.header
  position fixed
  top 0
  z-index 100
  width 100%
  background-color #89be48
  .header-content
    width 100%
    margin 0 auto
    position relative
    .header-title
      line-height 1.89rem
      font-size .9rem
      font-family 'Microsoft YaHei'
      text-align center
      color #FFFFFF
      width 80%
      margin 0 auto
      white-space nowrap
      text-overflow ellipsis
      overflow hidden
.page-loadmore-wrapper
  font-size .5rem
  font-family 'Microsoft YaHei', Sans-serif
  margin 1.89rem 0 2.13rem
  .mint-loadmore-top
    margin-top -1.89rem
    height 1.89rem
    line-height 1.89rem
    text-align center
  .clearfix
    background-color #FFFFFF
    .stroll-all-item
      width 50%
      float left
      .stroll-item
        margin 3%
        width 94%
        clear both
        .stroll-type-item
          margin 0 1%
          .stroll-item-layer
            position relative
            border-radius .33rem
            overflow hidden
            .tag-new
              background-color: #79da87;
              max-width: 94%;
              overflow: hidden;
              display: inline-block;
              text-align: left;
              font-size: .4rem;
              color: #fff;
              line-height: .7rem;
              text-transform: uppercase;
              padding: 0 .25rem;
              position: absolute;
              left: 0;
              top: .4rem;
              z-index: 6;
              white-space: nowrap;
              word-break: keep-all;
              text-overflow: ellipsis;
          .stroll-item-title
            font-size .6rem
            font-weight 400
            padding .2rem 0 .1rem
            overflow hidden
            white-space nowrap
            word-break keep-all
            text-overflow ellipsis
          .stroll-price-bar
            text-align left
            width 100%
            font-size .5rem
            height .7rem
            overflow hidden
            .price
              font-size .78rem
              line-height .7rem
              display inline-block
              color #ff475d
              font-weight 400
              overflow hidden
              text-align left
              width auto
              .original
                font-size .5rem
                display inline-block
                color #888
                text-decoration line-through
                margin-left 1px
            .comment
              font-size .6rem
              line-height .71rem
              overflow hidden
              float right
              display inline-block
              text-align right
              color #999
              white-space nowrap
              word-break keep-all
              text-overflow ellipsis
          img
            width 100%
          .cat-menu-a
            width 47%
            background-color #eaeaea
            border-radius .3rem
            vertical-align middle
            font-size .7rem
            color #4a4a4a
            padding .8rem .5%
            display inline-block
            margin 1%
            float left
            text-align center
#bottombar
  position fixed
  bottom 0
  z-index 100
  height 2.13rem
  width 100%
  background-color #f8f8f8
  border-top 1px solid #ddd
#footermenuNav
  text-align center
  overflow hidden
  li
    float left
    width 20%
    position relative
    margin 0 auto
    &>a
      display block
      text-align center
      font-size: .1rem;
      &>span
        font-size .5rem
      .homeico
        background-image url("../img/icon01.png")
      .typeico
        background-image url("../img/icon02.png")
      .strollico
        background-image url("../img/icon03.png")
      .shoppingcartico
        background-image url("../img/icon04.png")
      .accountcenterico
        background-image url("../img/icon05.png")
  .ico
    width 100%
    height 1.65rem
    background-position center
    background-repeat no-repeat
    background-size 28%
    margin-bottom -.2rem
.download-wrap
  position fixed
  bottom 2.14rem
  left 0
  right 0
  z-index 100
  height 2.77rem
  background url("../img/downloadBottom.png") no-repeat 0 0
  background-size 100%
  img
    position absolute
    left 4.8%
    top -1.77rem
    width 15.5%
.clearfix:after
  content ''
  display block
  clear both
