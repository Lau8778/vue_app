$rem(n)
  16*n/1080 rem

#app
  font-family 'Microsoft YaHei'
.toTop
  position fixed
  right 2%
  bottom 3rem
  width 1.4rem
  height 1.4rem
  color #FFFFFF
  background-color rgba(0, 0, 0, .8)
  border-radius 50%
  overflow hidden
  &:after
    content ''
    display block
    width 1.4rem
    height 1.4rem
    background url("../img/arrowLeft.png") no-repeat center
    background-size 60%
.header
  position fixed
  top 0
  z-index 100
  width 100%
  background-color #89be48
  .header-content
    width 100%
    margin 0 auto
    position relative
    .header-title
      line-height 1.89rem
      font-size .9rem
      font-family 'Microsoft YaHei'
      text-align center
      color #FFFFFF
      width 80%
      margin 0 auto
      white-space nowrap
      text-overflow ellipsis
      overflow hidden
    .editcart
      font-size .79rem
      color #fff
      line-height 1.89rem
      margin-right 2%
      position absolute
      right 2%
      top 0
      z-index 9
.uscenter-cont
  margin-top 1.91rem
  padding-bottom 2.2rem
  color #2e2e2e
  overflow hidden
  background-color rgb(242, 242, 242)
  .mint-loadmore-top
    margin-top -1.91rem
    text-align center
    height 1.89rem
    line-height 1.89rem
    font-size .5rem
  .acct-user-wrap
    width 100%
    height 4.18rem
    background url("../img/background.png") no-repeat
    background-size 100%
    .acct-nolog
      width 100%
      overflow hidden
      text-align center
      margin 0 auto
      padding .2rem 0 0
      .state
        display block
        color #222222
        font-size .7rem
        line-height 1.5rem
      .btn-entry
        font-size 0
        display inline-block
        color #009c42
        padding 0 0.65rem
        height 1.4rem
        line-height 1.4rem
        background rgba(255,255,255,0.4)
        border 1px solid #009c42
        border-radius .8rem
        margin .2rem auto 0
        & a
          display inline-block
          height 1.4rem
          color #009c42
          font-size .73rem
          padding 0 .28rem
        .split
          width .02rem
          height .6rem
          display inline-block
          border-left .02rem solid #009c42
          margin 0 .2rem
  .dashboard-order
    overflow hidden
    background-color #fff
    border-top 1px solid #eee
    margin 0 auto
    & ul
      width 100%
      height 2.3rem
      overflow hidden
      border-bottom 1px solid #eee
    & li
      width 33%
      height 1.2rem
      float left
      border-right 1px solid #dedede
      line-height 1rem
      margin .8rem 0 0
      a
        display block
        text-align center
        color #585858
        .item-icon
          display inline-block
          position relative
          span
            display inline-block
            height 1.5rem
            width 1.8rem
            background-size 95%
            background-repeat no-repeat
            background-position center 120%
          #ico1
            background-image url("../img/unpaid.png")
          #ico2
            background-image url("../img/deliver.png")
          #ico3
            background-image url("../img/take_delivery.png")
          #ico4
            background-image url("../img/wait_comment.png")
          #ico5
            background-image url("../img/reply.png")
            background-position -.2rem -.15rem
          #ico6
            background-image url("../img/exchange_goods.png")
        .item-title
          display inline-block
          vertical-align 56%
          font-size .5rem
          color #585858
          line-height 1.2rem
  .dashboard
    & ul
      margin-bottom .5rem
      li
        width 100%
        height 2.3rem
        overflow hidden
        background-color #fff
        border-bottom 1px solid #eee
        border-top 1px solid #eee
        margin -1px auto 0
        & a
          width 100%
          height 2.3rem
          display block
        .item-i
         width 1.15rem
         overflow hidden
         display inline-block
         float left
         margin .65rem .55rem 0
        .item-title
          display inline-block
          line-height 2.5rem
          float left
          font-size .6rem
          color #585858
        .arr-r
          width .4rem
          height .4rem
          display inline-block
          float right
          border-right 2px solid #bbb
          border-top 2px solid #bbb
          margin .9rem .4rem 0 0
          transform rotate(45deg)
          -webkit-transform rotate(45deg)
#bottombar
  position fixed
  bottom 0
  z-index 100
  height 2.13rem
  width 100%
  background-color #f8f8f8
  border-top 1px solid #ddd
#footermenuNav
  text-align center
  overflow hidden
  li
    float left
    width 20%
    position relative
    margin 0 auto
    &>a
      display block
      text-align center
      font-size: .1rem;
      &>span
        font-size .5rem
      .homeico
        background-image url("../img/icon01.png")
      .typeico
        background-image url("../img/icon02.png")
      .strollico
        background-image url("../img/icon03.png")
      .shoppingcartico
        background-image url("../img/icon04.png")
      .accountcenterico
        background-image url("../img/icon05.png")
  .ico
    width 100%
    height 1.65rem
    background-position center
    background-repeat no-repeat
    background-size 28%
    margin-bottom -.2rem
.download-wrap
  position fixed
  bottom 2.14rem
  left 0
  right 0
  z-index 100
  height 2.77rem
  background url("../img/downloadBottom.png") no-repeat 0 0
  background-size 100%
  img
    position absolute
    left 4.8%
    top -1.77rem
    width 15.5%
.clearfix:after
  content ''
  display block
  clear both

