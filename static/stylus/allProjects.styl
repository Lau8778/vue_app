$rem(n)
  16*n/1080 rem

.toTop
  position fixed
  right 2%
  bottom 3rem
  width 1.4rem
  height 1.4rem
  color #FFFFFF
  background-color rgba(0, 0, 0, .8)
  border-radius 50%
  overflow hidden
  &:after
    content ''
    display block
    width 1.4rem
    height 1.4rem
    background url("../img/arrowLeft.png") no-repeat center
    background-size 60%
#topbar
  width 100%
  position fixed
  z-index 100
  top 0
  .header-content
    text-align center
    height $rem(126)
    line-height $rem(126)
    background-color #89be48
    font-family 'Microsoft YaHei'
    font-weight bold
    font-size .9rem
    color #FFFFFF
  .search-panel
    background-color #f2f2f2
    padding .15rem 0
#search-bar
  width 94%
  height 1.39rem
  margin 0 auto
  overflow hidden
  border-radius .2rem
  text-align center
  position relative
  font-size .7rem
  .searchinput
    width 100%
    height 100%
    text-align center
    font-family 'Microsoft YaHei'
    background url("../img/icon06.png") no-repeat 38% .25rem #FFFFFF
    background-size auto 70%
    padding-left 1.39rem
    position absolute
    left 0
    top 0
    z-index 5
  .changeStyle
    width 88% !important
    text-align left !important
    background-position .2rem .25rem !important
  .sch-cancel
    width 15%
    height 100%
    line-height  1.45rem
    display block
    float right
    color #83b842
    font-family 'Microsoft YaHei'
    text-align right
    background-color transparent
#content-wrap
  position absolute
  top $rem(252)
  width 100%
  height 22.64rem
  overflow-y scroll
  .life-goodsBox
    margin-top 1rem
    font-family 'Microsoft YaHei'
    .life-goodsTip
      width 5rem
      text-align center
      margin auto
      .life-goodsMark
        line-height 1.4rem
        font-size .7rem
        letter-spacing 0.078rem
    .life-goodsUl
      background-color #FFFFFF
    .onlyStyle li
      float left
      height 5.9rem
      width 33%
      text-align center
      border 1px solid #f1f1f1
      margin 0 0 -1px -1px
      img
        width 60% !important
        margin auto
        padding-top .5rem
      dl
        height: 1rem;
        line-height: 1rem;
        padding-bottom: .5rem;
        padding-top: .25rem;
        font-size: .6rem;
#bottombar
  position fixed
  bottom 0
  z-index 100
  height 2.13rem
  width 100%
  background-color #f8f8f8
  border-top 1px solid #ddd
#footermenuNav
  text-align center
  overflow hidden
  li
    float left
    width 20%
    position relative
    margin 0 auto
    &>a
      display block
      text-align center
      font-size: .1rem;
      &>span
        font-size .5rem
      .homeico
        background-image url("../img/icon01.png")
      .typeico
        background-image url("../img/icon02.png")
      .strollico
        background-image url("../img/icon03.png")
      .shoppingcartico
        background-image url("../img/icon04.png")
      .accountcenterico
        background-image url("../img/icon05.png")
  .ico
    width 100%
    height 1.65rem
    background-position center
    background-repeat no-repeat
    background-size 28%
    margin-bottom -.2rem
.download-wrap
  position fixed
  bottom 2.14rem
  left 0
  right 0
  height 2.77rem
  background url("../img/downloadBottom.png") no-repeat 0 0
  background-size 100%
  img
    position absolute
    left 4.8%
    top -1.77rem
    width 15.5%
#app
  overflow hidden
  height 28.47rem
  background-color rgb(242, 242, 242)
.clearfix:after
  content ''
  display block
  clear both
