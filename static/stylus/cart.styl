$rem(n)
  16*n/1080 rem

.toTop
  position fixed
  right 2%
  bottom 3rem
  width 1.4rem
  height 1.4rem
  color #FFFFFF
  background-color rgba(0, 0, 0, .8)
  border-radius 50%
  overflow hidden
  &:after
    content ''
    display block
    width 1.4rem
    height 1.4rem
    background url("../img/arrowLeft.png") no-repeat center
    background-size 60%
.header
  position fixed
  top 0
  z-index 100
  width 100%
  background-color #89be48
  .header-content
    width 100%
    margin 0 auto
    position relative
    .btn-back
      display block
      width 10%
      height 1.78rem
      position absolute
      top 0
      left 0
      .leftback
        display block
        width .5rem
        height 1.3rem
        background url("../img/btnLeftBack.png") no-repeat
        position absolute
        top .3rem
        left 25%
    .header-title
      line-height 1.89rem
      font-size .9rem
      text-align center
      color #FFFFFF
      width 80%
      margin 0 auto
      white-space nowrap
      text-overflow ellipsis
      overflow hidden
  .header-login-wrap
    width 100%
    background-color #f0fae6
    padding .4rem 0 .24rem
    .header-login
      width 74%
      min-height 1.4rem
      display table
      overflow hidden
      margin 0 auto
      padding 0 0 0 21%
      position relative
      .btn-login
        width 18%
        height 1.3rem
        display block
        background #fff
        border 1px solid #8bc146
        text-align center
        font-size .7rem
        color #88c13e
        line-height 1.3rem
        margin 0
        position absolute
        left 0
        top 0
      .login-tip
        width 100%
        display table-cell
        text-align left
        vertical-align middle
        font-size .6rem
        color #333
        line-height .7rem
.page-loadmore-wrapper
  background-color #F2F2F2
  padding-bottom 3.1rem
  .header-exchange-wrap
    width 100%
    height 1.5rem
    background-color #fff
    padding .3rem 0 .2rem
    margin-top 3.8rem
    border-bottom 1px solid #f2f2f2
    .header-exchange
      width 93%
      height 1.3rem
      overflow hidden
      margin .1rem auto 0
      position relative
      .exch-ipt
        padding-left 10px
        width 80%
        height 1.2rem
        line-height 1.4rem
        display inline-block
        border 1px solid #e7e7e7
        background #fff
        text-align center
        font-size .5rem
      .exch-btn
        width 20%
        height 1.3rem
        line-height 1.3rem
        display inline-block
        background #fff
        text-align center
        font-size .7rem
        color #6fbd00
        letter-spacing .1rem
        text-indent .2rem
        position absolute
        right 0
        top 0
        z-index 3
        border 1px solid #6fbd00
.wrap-cart-assem
  position fixed
  bottom 1rem
  width 100%
  overflow hidden
  background-color #fff
  border-bottom .05rem solid #f2f2f2
  margin .5rem auto 0
  .cart-assem-title
    width 94%
    overflow hidden
    border-bottom .05rem solid #ccc
    text-align left
    font-size .76rem
    color #333
    line-height 1rem
    margin 0 auto
    padding .4rem 3%
  .cart-assem-list
    width 100%
    max-height 6rem
    overflow-y hidden
    overflow-x scroll
    margin 0 auto
    padding .7rem 0
    &>ul
      height 6rem
      width 5000px
      .title, .price
        width 100%
        overflow hidden
        display block
        text-align left
        font-size .48rem
        color #333
        line-height 1rem
        font-weight 400
        text-overflow ellipsis
        white-space nowrap
        word-break keep-all
      li
        width 3.71rem
        overflow hidden
        display inline-block
        vertical-align top
        text-align left
        margin 0 .25rem
        img
          width 100%
          overflow hidden
          display block
#wrap-nodata
  #carts-img
    margin: 0 auto;
    text-align: center;
    padding-left: 1rem;
    padding-top: .6rem;
    box-sizing: border-box;
    img
      max-width 6.2rem
      vertical-align middle
  #carts-text
    text-align center
    font-size .7rem
    color rgb(102, 102, 102)
    line-height 1.23rem
  #carts-link
    text-align center
    &>a
      border .05rem solid rgb(137, 190, 72)
      padding 0.3rem .7rem
      display inline-block
      border-radius .3rem
      font-size .65rem
      letter-spacing .05rem
      margin-top .3rem
      color rgb(137, 190, 72)
#bottombar
  position fixed
  bottom 0
  z-index 100
  height 2.13rem
  width 100%
  background-color #f8f8f8
  border-top 1px solid #ddd
#footermenuNav
  text-align center
  overflow hidden
  li
    float left
    width 20%
    position relative
    margin 0 auto
    &>a
      display block
      text-align center
      font-size: .1rem;
      &>span
        font-size .5rem
      .homeico
        background-image url("../img/icon01.png")
      .typeico
        background-image url("../img/icon02.png")
      .strollico
        background-image url("../img/icon03.png")
      .shoppingcartico
        background-image url("../img/icon04.png")
      .accountcenterico
        background-image url("../img/icon05.png")
  .ico
    width 100%
    height 1.65rem
    background-position center
    background-repeat no-repeat
    background-size 28%
    margin-bottom -.2rem
.download-wrap
  position fixed
  bottom 2.14rem
  left 0
  right 0
  z-index 100
  height 2.77rem
  background url("../img/downloadBottom.png") no-repeat 0 0
  background-size 100%
  img
    position absolute
    left 4.8%
    top -1.77rem
    width 15.5%
.clearfix:after
  content ''
  display block
  clear both
#app
  font-family 'Microsoft YaHei'
